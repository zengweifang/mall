/* pages/search/search.wxss */

.page{
  position:absolute;
  bottom:0;
  top:0;
  left:0;
  right:0;
  background-color:#ffffff;
}

.page_content{
  width: 100%;
  height: 50px;
  position: fixed;
  background-color: #ffffff
}

.page_search{
  position:absolute;
  height:30px;
  z-index:99;
  left:10px;
  right:80px;
  top:10px;
  background-color:#eaeaea;
  opacity:0.6;
  border-radius:20px;
  padding-left:10px;
}

.page_search icon{
  position: absolute;
  padding: 5px
}

.page_search input{
  padding-left: 30px;
  position:relative;
  top:5px;
}

button{
  width:58px;
  font-size:12px;
  position:absolute;
  right:10px;
  top:10px;
}

.page_goods{
  background-color:#ffffff;
  padding:15px;
}

.page_price_c{
  color:#CE3C39!important;
  font-size:18px
}

.page_price_card{
  color:#EEB422!important;
  border:1px solid #EEB422;
  padding: 0 5px;
}
.page_price_delete{
  text-decoration:line-through;
  margin-left: 5px;
  font-weight: normal!important;
  color: #808080!important
}

.page_list{
  margin-top: 50px
}