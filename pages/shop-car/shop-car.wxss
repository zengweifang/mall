/* pages/shop-car/shop-car.wxss */

.page {
  margin-bottom: 100px;
}

.car_goods {
  position: relative;
  height: 136px;
  margin-top: 1px;
}

.car_goods .car_goods_l {
  padding-left: 15px;
  line-height: 110px;
}

.car_goods .car_goods_m image {
  width: 110px;
}

.car_goods .car_goods_mm {
  padding: 0 10px;
}

.car_goods_cb {
  margin-top: 2px;
  height: 36px;
  line-height: 36px;
  padding-left: 15px;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  /* box-shadow: 0 0 8rpx 0; */
  z-index: 999;
}

.footer-box .shop-cart-btn {
  position: relative;
  width: 450rpx;
  height: 100%;
  text-align: center;
  padding-top: 26rpx;
  color: #ff6a6a;
  box-sizing: border-box;
}

.footer-box .shop-cart-btn .shop-num {
  position: absolute;
  color: #e64340;
  left: 80rpx;
  top: -20rpx;
}

.footer-box .join-shop-cart {
  text-align: center;
  width: 300rpx;
  height: 100%;
  line-height: 100rpx;
  background-color: #ff6850;
  color: #fff;
  font-size: 34rpx;
}

.footer-box .now-buy {
  text-align: center;
  height: 100%;
  width: 300rpx;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 34rpx;
}

.car_attr {
  color: #dedede;
}

.car_price {
  color: #ff6a6a;
}

.car_goods_delete {
  color: #fff;
  justify-content: center;
  align-items: center;
  width: 75px;
  background: #e64340;
  position: absolute;
  height: 136px;
  z-index: 1;
  right: 0;
  display: flex;
}

.buy-num {
  text-align: center;
  position: absolute;
  right: 20px;
}

.buy-num .jian-btn {
  width: 48rpx;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
}

.buy-num .jian-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.buy-num .jia-btn {
  width: 48rpx;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.buy-num .jia-btn.disabled {
  background-color: #f5f5f9;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.buy-num input {
  width: 68rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
}

.page_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods_item {
  position: absolute;
  z-index: 2;
  width: 100%;
  background-color: #fff;
  padding: 10px 0;
}
