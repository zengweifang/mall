.page__hd {
  background-color: #ffffff
}

.page_label {
  text-align: center;
  font-size: 14px;
  padding : 10px 0
}

.page_label .page_label_text view {
  display: inline-block;
  width: 10px;
  height: 10px;
  background: #dedede;
  -moz-border-radius: 50px;
  -webkit-border-radius: 50px;
  border-radius: 50px;
  line-height: 45px;
  position: relative;
  margin: 0 0 0 10px;
}


.slide-image {
  width: 100%;
  height: inherit;
}

.swiper-image {
   height: 165px; 
}

.page_personal{
  background-color: #ffffff;
  margin-top: 10px
}

.page_personal_b{
  padding-left : 3%;
  overflow: hidden;
}
.page_personal_b image{ 
   width: 100% 
}

.page_price text{
  color: #000000;
  font-weight: bold
}

.weui-grids{
  border: none
}
.weui-grid{
  padding: 0;
  border: none
}

.weui-grid__icon{
  margin: 0;
  width: 100%;
}

.page__bd{
  background-color: #ffffff;
  padding: 10px
}

.page_comm_images{
  width: 44%;
  float: left;
  padding-right:3%;
  margin-bottom: 15px 
}

.page_comm_images image{
  height: 70%
}

.page_name{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}