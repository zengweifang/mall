/* pages/cards/card.wxss */

.card{
  margin-bottom: 100px
}
.card {
  width: 100%;
}

.card_list {
  margin: 10px;
  width: 94%;
}

.card_item {
  padding: 50px;
  border-radius: 10px;
  margin-bottom: 10px;
  background-color: #ffffff;
  border: 1px solid #eaeaea;
  line-height: 30px
}

.card_item_selected{
  background-color: #FDF5E6; 
  border: 1px solid #EED8AE
}

.card_item_c{
  color: #CDBA96
}
.card_item_name{
  font-weight:bold;
  font-size:16px;
}

.footer-box {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 45px;
  line-height: 45px
}

.price{
  float: left;
  width: 60%;
  background-color: #ffffff;
  text-align: left;
  color: #CE3C39;
  padding-left:20px;

}

.buy{
  background-color: #CDBA96;
  color: #8B5A00;
  text-align: center;
  background: linear-gradient(to right, #ffffff , #EED8AE); 
}

.card_price{
  float: right;
  color: #CE3C39
}