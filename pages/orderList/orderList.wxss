/* pages/orderList/orderList.wxss */
.disc_detail{
  width: 100%;
}
.dic_detail_swiper{
  white-space: nowrap;
  display: flex;
  background-color: #ffffff
}
.dic_detail_swiper_scroll{
  width: 100%;
  height: 50px;
  position: fixed;
  top: 0;
  background-color: #ffffff;
  z-index: 999
}

.dic_detail_swiper_item{
  width: 20%;
  height: 45px;
  line-height: 45px;
  text-align: center;
}
.item_hasbgr{
  color:#CE3C39;
  border-bottom:2px solid #CE3C39;
}


.page_personal_b{
  overflow: hidden;
  margin-top: 45px
}
.page_personal_b image{ 
   width: 100% 
}

.page_price text{
  color: #000000;
  font-weight: bold
}

.page_comm_images{
  width: 47%;
  float: left;
  margin-right:3% ;
  margin-bottom: 15px;
}

.page_comm_images image{
  height: 70%
}

.page_name{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}


.order_list_img{
  width: 20%;
}

.order_list_title{
  width: 65%
}

.order_list_total_price,.order_list_button{
  text-align: right;
  padding: 5px;
  margin-top: 1px
}

.order_list{
  background-color: #ffffff;
  margin-bottom: 1px;
}
.order_list_total_price{
  padding-right: 25px
}

.order_list_pay{
  margin-left:15px;
  color:#CE3C39;
}

.order_list_button{
  padding-right: 25px
}

.order_list_button button{
  font-size: 12px
}

.order_list_content{
  padding: 15px 25px 0 15px
}